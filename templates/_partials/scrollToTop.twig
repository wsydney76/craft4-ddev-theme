{% set btnClasses = btnClasses ?? 'bottom-4 right-4 bg-primary dark:bg-primary-dark text-secondary dark:text-secondary-dark rounded' %}
<div x-data="{
        show: false,
        top() {
            document.getElementById('body').scrollIntoView({behavior: 'smooth'});
        },
        scroll() {
            this.show = (document.body.scrollTop > 120 || document.documentElement.scrollTop > 120)
        }
     }"
     @scroll.window="scroll()">

	<button class="fixed px-4 py-2 z-50 {{ btnClasses }}"
	        style="display: none"
	        x-show="show" x-transition
	        @click="top()" title="Go to top" accesskey="t">
		{{ svg('@templates/_icons/chevron-up.svg') }}
	</button>

</div>

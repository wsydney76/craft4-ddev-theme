<div class="container-{{ theme.pageWidth }} mb-block">
    <div class="border border-gray-500 p-4" x-data>

        <div class="font-bold text-xl mb-4">
            {{ 'Your current settings:'|t }}
        </div>

        <div x-show="!$store.consent.mediaCookiesAllowed">
            <div>
                {{ 'You are not accepting third party cookies'|t }}
            </div>

        </div>

        <div x-show="$store.consent.mediaCookiesAllowed">
            <div>
                {{ 'You are accepting third party cookies'|t }}
            </div>

        </div>

        <div class="flex space-x-4 mt-4">

            <button type="button" class="bg-green-700 text-white px-4 py-2 disabled:bg-gray-400 disabled:cursor-text"
                    :disabled="$store.consent.mediaCookiesAllowed"
                    @click="$store.consent.allowMediaCookies()">{{ 'Accept'|t }}
            </button>


            <button type="button" class="bg-red-700 text-white px-4 py-2 disabled:bg-gray-400 disabled:cursor-text"
                    :disabled="!$store.consent.mediaCookiesAllowed"
                    @click="$store.consent.rejectMediaCookies()">{{ 'Reject'|t }}
            </button>
        </div>
    </div>


</div>

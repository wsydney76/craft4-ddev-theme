{% embed '_layouts/components/dropdown.twig' %}
    {% block buttonText %}
        <div class="nav-link {{ craft.app.request.segment(1) == navEntry.slug ? 'border-primary dark:border-primary-dark' : 'border-transparent' }}">{{ navEntry.title }}</div>
    {% endblock %}

    {% block panel %}
        {% if entries is defined %}

            {% for navEntry in entries %}
                <div class="my-2">
                    <a class="nav-link border-transparent truncate"
                       href="{{ navEntry.url }}">{{ navEntry.navTitle }}</a>
                </div>
            {% endfor %}

        {% endif %}
    {% endblock %}

{% endembed %}


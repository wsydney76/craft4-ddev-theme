{% set classes = {
    error: 'bg-red-50 border-red-400 text-red-800',
    notice: 'bg-green-50 border-green-400 text-green-800',
    info: 'bg-sky-50 border-sky-400 text-sky-800'
} %}

<div class="rounded p-4 mt-4 border {{ classes[type] }}">
    <div class="flex">
        <div class="ml-3">
            <p class="text-sm font-medium">
                {% block message %}
                    {{ message }}
                {% endblock %}
            </p>
        </div>
    </div>
</div>
